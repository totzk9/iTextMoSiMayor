<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".SMS.SMSMessaging">

    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/recycler_view_message"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--app:layout_constraintBottom_toTopOf="@+id/relativeLayout_Message"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->
    <ListView
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#cdeede"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout_Message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout_Message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_sendmsg_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editSendMessage"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/rect_oval_white"
                android:elevation="2dp"
                android:fontFamily="@font/roboto"
                android:hint="@string/sendMessageHint"
                android:padding="8dp"
                android:textSize="18sp" />

            <android.support.design.button.MaterialButton
                android:id="@+id/btnSendMessage"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:layout_weight="0"
                android:padding="7dp"
                android:text="@string/send"
                android:elevation="2dp"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="30dp"
                app:icon="@drawable/ic_send_black_24dp"
                app:iconTint="@color/colorPrimaryLight"
                app:rippleColor="@color/colorAccent" />
        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>